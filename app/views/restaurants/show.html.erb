<div class="container">
  <h1><%= @restaurant.name %></h1>
  <ul>
    <li>Type of food : <%= @restaurant.category %></li>
    <li>Address : <%= @restaurant.address %></li>
    <li>Phone number : <%= @restaurant.phone_number %></li>
  </ul>
</div>

<div class="container">
  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item "><strong>Rating : <%= review.rating %> /5</strong> <br> <%= review.content %></li>
    <% end %>
  </ul>
</div>

<%# <div class="container">
