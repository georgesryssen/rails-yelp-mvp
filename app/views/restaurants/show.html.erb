<%# </div> %>

<div class="container">
  <h2>New review</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, :collection => [1, 2, 3, 4, 5]%>
    <%= f.input :content, :as => :text, :input_html => { 'rows' => 5, 'cols' => 10 } %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>
